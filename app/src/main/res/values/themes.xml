<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- LIGHT MODE -->
    <!-- Screen Background if Light Mode is On -->
    <style name="SCREEN">
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Text Colour if Light Mode is On -->
    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Positive Button Colour if Light Mode is On -->
    <style name="positive_button">
        <item name="android:backgroundTint">#028A0F</item>
    </style>

    <!-- Negative Button Colour if Light Mode is On -->
    <style name="negative_button">
        <item name="android:backgroundTint">#B90E0A</item>
    </style>


</resources>